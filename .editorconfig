# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.{csproj,xml}]
max_line_length = 200

# Code files
[*.{cs,csx,vb,vbx}]
indent_size = 4
insert_final_newline = true
charset = utf-8-bom
max_line_length = 120

[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
